<%- include('../partials/header') %>
<div class="container register">
    <div class="row">
        <div class="col-md-3 register-left">
            <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt=""/>
            <h3>Welcome</h3>
            <p>You are 30 seconds away from Creating new Campgrounds!</p>
            
        </div>
        <div class="col-md-9 register-right">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <h3 class="register-heading">Edit  <%=Campground.name %></h3>
                    <div class="row register-form">
                        <div class="col">
                            <form class="was-validated" action="/Campgrounds/<%=Campground.id %>" method="POST">
                                <div class="form-group">
                                    <label for="formGroupEformxampleInput">Campground Name</label>
                                    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Campground name" name="name" value="<%=Campground.name %>" required>
                                    <div class="invalid-feedback">
                                        Please enter a Campgroundname .
                                      </div>
                                </div>
                                <div class="form-group">
                                    <label for="formGroupExampleInput2">Campground image</label>
                                    <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Campground image url" name="image" value="<%=Campground.image %>" required>
                                    <div class="invalid-feedback">
                                        Please enter a imageurl .
                                      </div>
                                </div>
                                <div class="form-group">
                                    <label for="validationTextarea">Campground Description</label>
                                    <textarea class="form-control" id="validationTextarea"  name="description" placeholder="Required example textarea" required><%= Campground.description %></textarea>
                                    <div class="invalid-feedback">
                                      Please enter a description of Campground.
                                    </div>
                                  </div>
                                  <button class="btn btn-danger btn-block" type="submit">Submit</button>
                            </form>
                            </div>
                            </div>
                            </div>
                            </div>
                        </div>       

<%- include('../partials/footer') %>